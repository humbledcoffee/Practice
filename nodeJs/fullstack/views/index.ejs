<!DOCTYPE html>
<html>
  <head>
    <title>mongoDB练习</title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <script src="https://cdn.jsdelivr.net/npm/axios@1.1.2/dist/axios.min.js"></script>
    <script>
      // Add a request interceptor
      axios.interceptors.request.use(
        function (config) {
          // Do something before request is sent
          const token = localStorage.getItem("Authorization");
          config.headers.Authorization = `Bearer ${token}`;
          return config;
        },
        function (error) {
          // Do something with request error
          return Promise.reject(error);
        }
      );
      // Add a response interceptor
      axios.interceptors.response.use(
        function (response) {
          // Any status code that lie within the range of 2xx cause this function to trigger
          // Do something with response data
          const { authorization } = response.headers;
          authorization && localStorage.setItem("Authorization", authorization);
          return response;
        },
        function (error) {
          // Any status codes that falls outside the range of 2xx cause this function to trigger
          // Do something with response error
          if (error.response.status === 401) {
            localStorage.removeItem("Authorization");
            location.href = "/login";
          }
          return Promise.reject(error);
        }
      );
    </script>
  </head>
  <body>
    <h1>
      用户管理系统(后台)
      <button id="logout">退出登录</button>
    </h1>
    <div>用户名: <input id="name" /></div>
    <div>年龄: <input type="number" id="age" /></div>
    <div>密码: <input type="password" id="password" /></div>
    <div><button id="register">注册用户</button></div>
    <hr />
    <button id="update">更新用户</button>
    <button id="del">删除用户</button>
    <hr />
    <table border="1 ">
      <thead>
        <tr>
          <td>id</td>
          <td>用户名</td>
          <td>年龄</td>
          <td>密码</td>
        </tr>
      </thead>
      <tbody></tbody>
    </table>
    <script>
      let name = document.querySelector("#name");
      let age = document.querySelector("#age");
      let password = document.querySelector("#password");
      let register = document.querySelector("#register");
      let update = document.querySelector("#update");
      let del = document.querySelector("#del");
      let logout = document.querySelector("#logout");

      // 增
      register.onclick = () => {
        axios.post("/api/user", {
          username: name.value,
          age: age.value,
          password: password.value,
        });
      };
      //删
      del.onclick = () => {
        axios.delete("/api/user/64df13c3c6b71faa39d6b8d0");
      };
      // 改
      update.onclick = () => {
        axios.put("/api/user/64df13c3c6b71faa39d6b8d0", {
          username: name.value,
          age: age.value,
          password: password.value,
        });
      };

      // 查
      axios.get("/api/user").then((res) => {
        let tbody = document.querySelector("tbody");
        tbody.innerHTML = res.data
          .map(
            (item) =>
              `<tr>
            <td>${item._id}</td>
            <td>${item.username}</td>
            <td>${item.age}</td>
            <td>${item.password}</td>
            </tr>`
          )
          .join("");
      });
      //退出登录
      logout.onclick = () => {
        localStorage.removeItem("Authorization");
        location.href = "/login";
      };
    </script>
    <script></script>
  </body>
</html>
