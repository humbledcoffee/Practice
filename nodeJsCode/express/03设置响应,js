const express = require('express')
// 创建应用对象
const app = express()
//创建路由
app.get('/response',(req,res)=>{
    //原生响应
    //statusCode 状态码设置
    //statusMessage 状态备注 
    //setHeader 设置相应头
    //write  追加响应体
    //send 追加响应头 自动设置 utf-8
    //redirect('')重定向
    // download() 下载响应 需要传入文件的绝对路径
    //json json响应 里边传json
    // sendfile 发送文件 简化了readfile的步骤
    //以上都可以进行链式调用
    res.end('hello express')
})
//监听端口 启动服务
app.listen(8080,()=>{
    console.log('启动8080')
}) 